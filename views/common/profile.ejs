<div class="main-container">
  <div class="signup-container" style="max-width: 600px">
    <h2 style="text-align: center; margin-bottom: 20px">👤 Your Profile</h2>

    <div class="profile-item">
      <label>Name:</label>
      <p><%= user.name %></p>
    </div>

    <div class="profile-item">
      <label>Email:</label>
      <p><%= user.email %></p>
    </div>

    <div class="profile-item">
      <label>Phone Number:</label>
      <p><%= user.phoneNumber %></p>
    </div>

    <div class="profile-item">
      <label>Address:</label>
      <p><%= user.address %></p>
    </div>

    <div class="profile-item">
      <label>ZIP Code:</label>
      <p><%= user.zipCode %></p>
    </div>

    <div class="profile-item">
      <label>Role:</label>
      <p class="text-capitalize"><%= user.role %></p>
    </div>

    <div style="text-align: center; margin-top: 30px">
      <a href="/" class="filter-btn">🏠 Back to Home</a>
    </div>
  </div>
</div>
